name: Docker Series Builds

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: docker login
      env:
        DOCKER_USER: ${{ secrets.DOCKER_USER }}   
        DOCKER_PASSWORD: ${{ secrets.DOCKER_PASSWORD }}  
      run: |
        sudo docker login -u "krandmm" -p "tmwh!1004" docker.io
    - name: docker build python
      run: |
        sudo docker build ./python -t python:1.0.0
        sudo docker tag python:1.0.0 krandmm/python:1.0.0
    - name: docker push
      run: |
        sudo docker push krandmm/python:1.0.0
