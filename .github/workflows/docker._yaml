name: Docker Series Builds

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: docker login
      env:
        DOCKER_USER: ${{ secrets.DOCKER_USER }}   
        DOCKER_PASSWORD: ${{ secrets.DOCKER_PASSWORD }}  
      run: |
        sudo docker login -u $DOCKER_USER -p $DOCKER_PASSWORD docker.io
    - name: docker build csharp
      run: |
        sudo docker build ./c# -t krandmm/csharp:1.0.0
    - name: docker build nodejs
      run: |
        sudo docker build ./nodejs -t krandmm/nodejs:1.0.0
    - name: docker build python
      run: |
        sudo docker build ./python -t krandmm/python:1.0.3
    - name: docker build golang
      run: |
        sudo docker build ./golang -t krandmm/golang:1.0.0
    - name: docker push
      run: |
        sudo docker push krandmm/nodejs:1.0.0
        sudo docker push krandmm/nodejs:1.0.0
        sudo docker push krandmm/golang:1.0.0
        sudo docker push krandmm/python:1.0.3
